- vurl = summary
%ul.team
  %li.member
    %ul
      %li.member-thumb
        = render :partial => 'screenshot', :locals => {:vurl => vurl}
      %li.member-name= link_to vurl.title, vurl.url
      %li.member-position
        == #{vurl.total_clicks} total clicks
        == &bull; #{vurl.clicks_count} in the last #{current_period}
        - if display_stats_link?
          == &bull; #{link_to 'View stats', stats_path(vurl.slug)}
      %li.member-info= vurl.summary_text
